{
  "name": "backend",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "esbuild src/index.ts --bundle --platform=node --target=node20 --format=esm --outdir=dist --external:@hono/node-server --external:hono --external:@quincy/shared",
    "build:tsc": "tsc -p tsconfig.build.json",
    "start": "node dist/index.js"
  },
  "dependencies": {
    "@hono/node-server": "^1.15.0",
    "@quincy/shared": "workspace:*",
    "hono": "^4.8.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.17",
    "esbuild": "^0.19.12",
    "tsx": "^4.7.1",
    "typescript": "^5.8.3"
  }
}