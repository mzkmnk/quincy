{
  "name": "backend",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "pnpm typecheck && pnpm build:bundle",
    "build:bundle": "esbuild src/index.ts --bundle --platform=node --target=node20 --format=esm --outdir=dist --external:express --external:cors --external:helmet --external:socket.io --external:@quincy/shared --external:better-sqlite3",
    "build:tsc": "tsc -p tsconfig.build.json",
    "typecheck": "tsc --noEmit",
    "start": "node dist/index.js",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "lint": "echo 'Lint not configured yet'"
  },
  "dependencies": {
    "@quincy/shared": "workspace:*",
    "better-sqlite3": "^12.2.0",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "socket.io": "^4.7.5"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^20.11.17",
    "@types/socket.io": "^3.0.2",
    "@vitest/ui": "^3.2.4",
    "esbuild": "^0.19.12",
    "socket.io-client": "^4.7.5",
    "tsx": "^4.7.1",
    "typescript": "^5.8.3",
    "vitest": "3.2.4"
  }
}
